@using WEB_153501_BYCHKO.ViewModels;
@{
    ViewBag.Title="Index";
}
@model DemoViewModel
<body>
    <h1>@ViewData["text"]</h1>
    <h3>Список</h3>
    <ol type="A">
        @for (int i = 1; i <= 10; i++)
        {
            <li>элемент @i списка</li>
        }
    </ol>
    <hr />

    <form method="post">
        <h3>Форма</h3>

        @*check boxes*@
        <div class="row mb-3">
            <div class="col-sm-1 offset-sm-1">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="gridCheckbox1">
                    <label class="form-check-label" for="gridCheck1">
                        Чек-бокс 1
                    </label>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-1 offset-sm-1">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck2" name="gridCheckbox2">
                    <label class="form-check-label" for="gridCheck2">
                        Чек-бокс 2
                    </label>
                </div>
            </div>
        </div>


        @*radios*@
        <fieldset class="row mb-1">
            <legend class="col-form-label col-sm-1"></legend>
            <div class="col-sm-1">       
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1">
                <label class="form-check-label" for="gridRadios1">
                    Радио-1
                </label>
            </div>
            <div class="col-sm-1">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                <label class="form-check-label" for="gridRadios2">
                    Радио-2
                </label>
            </div>
            <div class="col-sm-1">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                <label class="form-check-label" for="gridRadios3">
                    Радио-3
                </label>
            </div>
        </fieldset>


        @*inputs*@
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail" name="inputEmail">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="inputPassword">
            </div>
        </div>
        <input type="submit" value="send"/>

        @*select*@
        <select asp-for="SelectedId" asp-items="Model.listDemos" />
    </form>
</body>
